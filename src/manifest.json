{
  "manifest_version": 2,
  "name": "ChromeOS CIN \u4e2d\u6587\u8f38\u5165\u6cd5",
  "version": "1.0",
  "description": "Input methods compatible with XCIN tables.",
  "background": {
    "page": "croscin.html"
  },
  "permissions": [
    "http://*/",
    "input",
    "tabs", "https://docs.google.com/feeds/*",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken",
    "experimental"
  ],
  "options_page": "options/options.html",
  "input_components": [
    {
      "name": "CrosCIN \u4e2d\u6587\u8f38\u5165\u6cd5",
      "type": "ime",
      "id": "cros_cin",
      "description": "ChromeOS Chinese Input Method (xcin compatible)",
      "language": "\u4e2d\u6587",  // The primary language this IME is used for,
                          // and displayed on menu selection.
      "layouts": ["us::eng"]
    }
  ]
}
